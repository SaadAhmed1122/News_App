<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headlinglabelTV"
        android:text="Filter News Sources"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@id/headlinglabelTV"
        />

<!--    Country -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/countrylabelTV"
        android:layout_below="@id/view1"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Country"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/countryspinner"
        android:padding="5dp"
        android:layout_below="@id/countrylabelTV"
        />
    <!--    Category -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cetagorylabelTV"
        android:layout_below="@id/countryspinner"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Cetagory"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cetagoryspinner"
        android:padding="5dp"
        android:layout_below="@id/cetagorylabelTV"
        />
    <!--    Language -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/languagelabelTV"
        android:layout_below="@id/cetagoryspinner"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Language"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/languagespinner"
        android:padding="5dp"
        android:layout_below="@id/languagelabelTV"
        />

    <Button
        android:id="@+id/submitbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/languagespinner"
        android:background="@color/colorAccent"
        />
</RelativeLayout>